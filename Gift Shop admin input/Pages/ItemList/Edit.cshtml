<h2 class="text-info">Update Item</h2>
<br />

<div class="border container" style="padding:30px">
    <form method="post">
        <input type="hidden" asp-for="Item.Id" />
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <div class=" col-3">
                <label asp-for="Item.Name"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Name" class="form-control" />
            </div>
            <span asp-validation-for="Item.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class=" col-3">
                <label asp-for="Item.ImageAddress"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.ImageAddress" class="form-control" />
            </div>
            <span asp-validation-for="Item.ImageAddress" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class=" col-3">
                <label asp-for="Item.Category"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Category" class="form-control" />
            </div>
            <span asp-validation-for="Item.Category" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class=" col-3">
                <label asp-for="Item.Price"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Price" class="form-control" />
            </div>
            <span asp-validation-for="Item.Price" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class=" col-3">
                <label asp-for="Item.Quantity"></label>
            </div>
            <div class="col-6">
                <input asp-for="Item.Quantity" class="form-control" />
            </div>
            <span asp-validation-for="Item.Quantity" class="text-danger"></span>
        </div>
