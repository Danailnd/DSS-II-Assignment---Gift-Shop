@page
@model Gift_Shop_admin_input.Pages.ItemList.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Item List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info form-control text-white"> Add New Item</a>
    </div>

    <div class="col-12 border p-3 mt-3">
        <form method="post">
            @if(Model.Items.Count()>0)
            {
                <table class="table table-striped border">
                    <tr class="table-secondary">
                        <th>
                            <label asp-for="Items.FirstOrDefault().Name"></label>
                        </th>
                        <th>
                            <label asp-for="Items.FirstOrDefault().Category"></label>
                        </th>
                        <th>
                            <label asp-for="Items.FirstOrDefault().Price"></label>
                        </th>
                        <th>
                            <p> In Stock</p>
                        </th>
                        <th>
                            <p>Last Updated </p>
                        </th>
                        <th></th>
                        @foreach(var item in Model.Items)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(m => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.Date)
                        </td>
                        <td>
                            <button asp-page-handler="Delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to delete')" class="btn btn-danger btn-sm">Delete</button>
                            <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-success btn-sm text-white">Edit</a>

                        </td>

                    </tr>

                        }
                 
                </table>

            }
            else
            {
                <p>No items available</p>
            }
        </form>

    </div>
</div>
